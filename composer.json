{
    "name": "damoiseau/all-purpose-directory",
    "description": "A flexible WordPress plugin for building directory and listing websites",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "MichaÃ«l Damoiseau",
            "homepage": "https://damoiseau.net"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^2.0",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.6",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "APD\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "APD\\Tests\\": "tests/",
            "APD\\Tests\\Unit\\": "tests/unit/",
            "APD\\Tests\\Integration\\": "tests/integration/",
            "APD\\Tests\\Factories\\": "tests/factories/"
        }
    },
    "scripts": {
        "test:unit": "phpunit --configuration phpunit-unit.xml --colors=always",
        "test:integration": "phpunit --configuration phpunit.xml.dist --colors=always",
        "test": "@test:integration",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "lint": "find . -name '*.php' -not -path './vendor/*' -not -path './tests/*' -print0 | xargs -0 -n1 php -l"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "8.0"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
