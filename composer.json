{
    "name": "damoiseau/all-purpose-directory",
    "description": "A flexible WordPress plugin for building directory and listing websites",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "MichaÃ«l Damoiseau",
            "homepage": "https://damoiseau.net"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^2.0",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "APD\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "APD\\Tests\\": "tests/",
            "APD\\Tests\\Unit\\": "tests/unit/",
            "APD\\Tests\\Integration\\": "tests/integration/",
            "APD\\Tests\\Factories\\": "tests/factories/"
        }
    },
    "scripts": {
        "test:unit": "phpunit --configuration phpunit-unit.xml --colors=always",
        "test:integration": "phpunit --configuration phpunit.xml.dist --colors=always",
        "test": "@test:integration"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "8.0"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
